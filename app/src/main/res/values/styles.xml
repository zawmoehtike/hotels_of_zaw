<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SourceSansProSemiBold.XLarge" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SourceSansProSemiBold.Large" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SourceSansProSemiBold.Medium" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SourceSansProSemiBold.Small" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SourceSansProLight.XLarge" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SourceSansProLight.Large" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SourceSansProLight.Medium" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SourceSansProLight.Small" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FilterChip.Style1" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_blue_green</item>
        <item name="android:textColor">@color/chip_text_blue_green</item>
        <item name="checkedIcon">@drawable/ic_mark_pale_blue_green</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyStyle</item>
        <item name="materialButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_blue_green</item>
    </style>

    <style name="AlertDialogBodyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:textColor">@color/color_blue_green</item>
    </style>

    <style name="AlertDialogTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:textColor">@color/color_blue_green</item>
    </style>
</resources>